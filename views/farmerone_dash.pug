doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width,initial-scale=1.0')
        title UFarm- FO DASHBOARD
        link(rel='stylesheet' type='text/css' href='/css/dashboard.css')
        link(rel='stylesheet' type='text/css' href='/css/graph.css')
    body
        .container
            .title FO DASHBOARD
            .top-container
                .stat-card.cards-border
                    .data-title
                        span.text-muted Registered Farmers                    
                    .graph.graph-total.lg-txt(data-number=`${data.ufTotals}`)
                .stat-card.cards-margin.cards-border#middle-card
                    .data-title
                        span.text-muted Total Orders Placed
                    table.table#table-orders
                        thead
                            tr
                                th.text-muted.bg-light.orders
                                th.text-muted.bg-light.orders
                                th.text-muted.bg-light.orders
                                th.text-muted.bg-light.orders
                        tbody
                            tr
                                td.text-muted.text-centered
                                td.text-muted.text-centered
                                td.text-muted.text-centered
                                td.text-muted.text-centered
                    .svg-container
                        svg(width="200" height="200" id="orders")
                    .graph.graph-orders.display-none
                        if (data.ordersSorted[0])
                            .LC1(data-ward=`${data.ordersSorted[0].ward}` 
                                data-number=`${data.ordersSorted[0].count}`)
                        else
                            .LC1(data-ward='LC1' data-number='0')
                        if(data.ordersSorted[1])
                            .LC2(data-ward=`${data.ordersSorted[1].ward}` 
                                data-number=`${data.ordersSorted[1].count}`)
                        else
                            .LC2(data-ward="LC2" data-number="0")
                        if(data.ordersSorted[2])
                            .LC3(data-ward=`${data.ordersSorted[2].ward}` 
                                data-number=`${data.ordersSorted[2].count}`)
                        else
                            .LC3(data-ward="LC3" data-number="0")
                        if(data.ordersSorted[3])
                            .LC4(data-ward=`${data.ordersSorted[3].ward}` 
                                data-number=`${data.ordersSorted[3].count}`)
                        else
                            .LC4(data-ward="LC4" data-number="0")
                .stat-card.cards-border.cards-margin
                    .data-title
                        span.text-muted Produce Uploaded
                    table.table#table-uploads
                        thead
                            tr
                                th.text-muted.bg-light.uphead
                                th.text-muted.bg-light.uphead
                                th.text-muted.bg-light.uphead
                                th.text-muted.bg-light.uphead
                        tbody
                            tr
                                td.text-muted.text-centered
                                td.text-muted.text-centered
                                td.text-muted.text-centered
                                td.text-muted.text-centered
                    .graph.graph-uploads
                        if(data.uploadsSorted[0])
                            .LC1(data-ward=`${data.uploadsSorted[0].ward}` 
                                data-number=`${data.uploadsSorted[0].count}`)
                        else
                            .LC1(data-ward="LC1" data-number="0")
                        if(data.uploadsSorted[1])
                            .LC2(data-ward=`${data.uploadsSorted[1].ward}` 
                                data-number=`${data.uploadsSorted[1].count}`)
                        else
                            .LC2(data-ward="LC2" data-number="0")
                        if(data.uploadsSorted[2])
                            .LC3(data-ward=`${data.uploadsSorted[2].ward}` 
                                data-number=`${data.uploadsSorted[2].count}`)
                        else
                            .LC3(data-ward="LC3" data-number="0")
                        if(data.uploadsSorted[3])
                            .LC4(data-ward=`${data.uploadsSorted[3].ward}` 
                                data-number=`${data.uploadsSorted[3].count}`)
                        else
                            .LC4(data-ward="LC4" data-number="0")
                    .labels.text-muted.text-small
                        span LC1
                        span LC2
                        span LC3
                        span LC4
            .bottom-container
                .nav-container
                    nav.nav
                        a(href='fo/register')
                            .nav-icon
                                span.zmdi.zmdi-plus
                                .icon-text Register
                        a(href='fo/approval')
                            .nav-icon
                                span.zmdi.zmdi-storage
                                .icon-text Approvals
        script(type="text/javascript" src="/js/d3.js")            
        script(type="text/javascript" src="/js/farmerone_graphs.js")
